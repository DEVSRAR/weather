/* 温度样式设置 */
view.weather-wrapper{
  padding-top: 174rpx;
  padding-bottom: 250rpx;
  position: relative;
}
view .temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}
view .weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}
view .weather-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}